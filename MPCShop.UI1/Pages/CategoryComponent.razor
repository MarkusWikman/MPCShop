@using MPCShop.UI.Models.Link

<div class="dropdown mx-1">
    <button class="@(LinkOption.IsSelected ? "btn btn-secondary" : "btn btn-outline-secondary")" type="button" @onclick="OnCategoryTitleClicked">
        @LinkOption?.Name
    </button>

