</div>



@code {
    [Parameter] public LinkOption? LinkOption { get; set; }
    [Parameter] public EventCallback<int> OnTitleIsClicked { get; set; }

    void OnCategoryTitleClicked()
    {
        if (OnTitleIsClicked.HasDelegate && LinkOption is not null)
            OnTitleIsClicked.InvokeAsync(LinkOption.Id);
    }
}