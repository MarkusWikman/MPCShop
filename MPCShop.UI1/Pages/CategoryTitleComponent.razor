@using MPCShop.UI.Models.Link

<div class="d-flex m-2">
    @foreach (var link in LinkGroup!.LinkOptions)
    {
        <CategoryComponent LinkOption="link" OnTitleIsClicked="OnTitlePressed" />
    }
</div>



@code {
    [Parameter] public LinkGroup? LinkGroup { get; set; }
    [Parameter] public EventCallback<int> OnTitleUpdate { get; set; }

    void OnTitlePressed(int id)
    {
        if (OnTitleUpdate.HasDelegate)
            OnTitleUpdate.InvokeAsync(id);
    }

}
